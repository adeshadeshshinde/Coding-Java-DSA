class Solution {
    public int[] deckRevealedIncreasing(int[] arr) {
        int n = arr.length;
        Arrays.sort(arr);

        int ans[] = new int[n];
        ans[0] = arr[0];

        int k = 1;
        int c = 0;

        // insert the elements of sorted array at every 2nd postion of empty place;

        while(k<n){
            for(int i=1; i<n; i++){
                if(ans[i]==0){
                    c++;
                    if(c==2){
                        ans[i] = arr[k++];
                        c=0;
                    }
                }
            }
        }
        return ans;
    }
}
